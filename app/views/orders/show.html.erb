<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <ul class="list-group">
      <% @order.line_items.each do |line_item|%>
      <li class="list-group-item justify-content-between align-items-center">
        <div class= "list-group list-group-item d-flex justify-content-between align-items-center">
        <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'img-thumbnail'%>
        <%= line_item.product.name%> <span class="badge bg-success "><%= humanized_money_with_symbol line_item.product.price%></span>
        
       
       <span class="badge bg-success"> <h3>Quantity:<%= line_item.quantity%></h3></span>
       </div>
      </li>
      <%end%>
    </ul>  
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
